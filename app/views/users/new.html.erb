<html>
  <body>
    <h1>S'enregistrer</h1>

    <%= form_tag(method: :post) do %>
    <%= label_tag 'Username' %>
    <%= text_field_tag 'username', @post.username %>
    <br>
    <%= label_tag 'Email' %>
    <%= text_field_tag 'email', @post.email %>
    <br>
    <%= label_tag 'Bio' %>
    <%= text_area_tag 'bio', @post.bio %>
    <br>
    <%= submit_tag "S'enregistrer" %>

    <% end %>
  </body>
</html>
